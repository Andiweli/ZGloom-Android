<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ast.zgloom">

    <!-- Storage permissions for reading/writing ZGloom data on external storage -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- OUYA / controller-centric devices: require gamepad, touchscreen optional -->
    <uses-feature android:name="android.hardware.gamepad" android:required="true" />
    <uses-feature android:name="android.hardware.touchscreen" android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/gloom_android_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:requestLegacyExternalStorage="true">

        <!-- SDL-based main activity for ZGloom -->
        <activity
            android:name=".ZGloomActivity"
            android:screenOrientation="landscape"
            android:launchMode="singleTask"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <!-- OUYA game category -->
                <category android:name="tv.ouya.intent.category.GAME" />
            </intent-filter>
        </activity>

    </application>

</manifest>
